{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": [
      "**/*.json",
      "**/*.ts",
      "**/*.tsx",
      "!**/routeTree.gen.ts",
      "!**/components/ui/*.tsx",
      "!**/packages/backend/supabase"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "nursery": {
        "noShadow": "off"
      },
      "performance": {
        "noImgElement": "off",
        "noBarrelFile": "on",
        "noReExportAll": "on"
      },
      "style": {
        "useFilenamingConvention": "off"
      },
      "suspicious": {
        "noConsole": "off"
      },
      "correctness": {
        "noChildrenProp": "off"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true
  },
  "assist": {
    "actions": {
      "source": {
        "useSortedAttributes": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentStyle": "space",
    "indentWidth": 2
  }
}
