{
  "name": "@repo/backend",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    "./db": "./src/lib/db/index.ts",
    "./schema": "./src/lib/db/schemas/index.ts",
    "./email": "./src/email.ts",
    "./emails/*": "./src/emails/*.tsx",
    "./auth": "./src/lib/auth/index.ts"
  },
  "scripts": {
    "auth:generate": "pnpx @better-auth/cli generate --config ./src/lib/auth/index.ts --output ./src/lib/db/schemas/schema.auth.ts",
    "db:generate": "drizzle-kit generate --config ./drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./drizzle.config.ts",
    "db:push": "drizzle-kit push --config ./drizzle.config.ts",
    "db:reset": "pnpx tsx ./src/scripts/db-reset.ts",
    "db:reset:hard": "supabase db reset --local && pnpm db:reset",
    "email:dev": "email dev --dir ./src/emails --port 9999",
    "script:create-admin": "pnpx tsx ./src/scripts/create-admin.ts",
    "typecheck": "tsc --noEmit --allowImportingTsExtensions"
  },
  "dependencies": {
    "@react-email/components": "catalog:",
    "better-auth": "catalog:",
    "commander": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "drizzle-seed": "catalog:",
    "nodemailer": "catalog:",
    "pg": "catalog:",
    "prompts": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@faker-js/faker": "catalog:",
    "@react-email/preview-server": "catalog:",
    "@types/node": "catalog:",
    "@types/nodemailer": "catalog:",
    "@types/pg": "catalog:",
    "@types/prompts": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "drizzle-kit": "catalog:",
    "react-email": "catalog:",
    "typescript": "catalog:"
  }
}
