{
  "name": "@repo/backend",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    "./db": "./src/lib/db/index.ts",
    "./schema": "./src/lib/db/schema.ts",
    "./email": "./src/email.ts",
    "./emails/*": "./src/emails/*.tsx"
  },
  "scripts": {
    "auth:generate": "pnpx @better-auth/cli generate",
    "db:generate": "drizzle-kit generate --config ./drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./drizzle.config.ts",
    "db:push": "drizzle-kit push --config ./drizzle.config.ts",
    "db:reset": "supabase db reset --local",
    "email:dev": "email dev --dir ./src/emails --port 9999"
  },
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "@react-email/components": "catalog:",
    "better-auth": "^1.3.7",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "nodemailer": "catalog:",
    "pg": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@react-email/preview-server": "catalog:",
    "@types/node": "catalog:",
    "@types/nodemailer": "catalog:",
    "@types/pg": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "drizzle-kit": "catalog:",
    "react-email": "catalog:",
    "typescript": "catalog:"
  }
}
