{
  "name": "admin",
  "version": "1.0.0",
  "description": "the tcp (tech city pula) admin dashboard",
  "keywords": [
    "admin",
    "tanstack start"
  ],
  "author": "voiys",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "serve": "node --env-file=.env .output/server/index.mjs",
    "typecheck": "tsc --noEmit --allowImportingTsExtensions",
    "test:e2e": "playwright test --reporter=list",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright test --reporter=html && pnpm exec playwright show-report",
    "serve:e2e": "pnpm build && pnpm serve"
  },
  "dependencies": {
    "@repo/backend": "workspace:*",
    "@repo/ui": "workspace:*",
    "@tanstack/react-form": "catalog:",
    "@tanstack/react-router": "catalog:",
    "@tanstack/react-start": "catalog:",
    "@tanstack/react-store": "catalog:",
    "@tiptap/core": "catalog:",
    "@tiptap/pm": "catalog:",
    "@tiptap/react": "catalog:",
    "@tiptap/starter-kit": "catalog:",
    "@types/turndown": "catalog:",
    "better-auth": "catalog:",
    "class-variance-authority": "catalog:",
    "clsx": "catalog:",
    "cmdk": "catalog:",
    "date-fns": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-markdown": "catalog:",
    "tailwind-merge": "catalog:",
    "tailwindcss": "catalog:",
    "turndown": "catalog:",
    "vite": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@playwright/test": "catalog:",
    "@tailwindcss/typography": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "tw-animate-css": "catalog:",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "catalog:"
  }
}
